@page "/"
@inject SingleTonService singleton
@inject TransientServie transient
@inject ScopeService scope
@rendermode InteractiveServer
<h3><span style="color:red">Singleton:</span> @singleton.guid</h3>
<h3><span style="color:mediumseagreen">Scope:</span> @scope.guid</h3>
<h3><span style="color:cadetblue">Transient:</span> @transient.guid</h3>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}
